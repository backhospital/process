<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.mappers.iniMapper">

	<select id="list2" resultType="com.test.domain.iniVO">
		select
			path,data2,data1,data5,productid,data3
		from inimagelist
	</select>
	
	<select id="list3" resultType="com.test.domain.displayVO">
		select * from display
	</select>
	
	<!-- 게시판 전체 목록 페이징 처리 list -->
	<select id="listCri" resultType="com.test.domain.displayVO">
	   select * 
	   from display 
	   order by idx desc
	   limit #{skip},#{pageAmount}	  
	</select>
	
	<!-- 게시판 글 갯수 계산  -->
	<select id="countCSBoard" resultType="int">
	   select count(*) 
	   from display
	</select>
		
</mapper>